generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reminder {
  id               String   @id @default(uuid())
  text             String
  // time (ie 01:02) in UTC
  notificationTime DateTime @db.Time(0)
  // 0 indexed; 0 = Sunday, 6 = Saturday, etc.
  notificationDays Int[]
  user             User     @relation(fields: [userId], references: [id])
  userId           String
  message          Message?
  emoji            String
  color            String   @default("blue")
  createdAt        DateTime @default(now()) @db.Timestamptz(6)
  updatedAt        DateTime @default(now()) @db.Timestamptz(6)
}

model User {
  id                 String     @id @default(uuid())
  name               String?
  phone              String     @unique
  onboarded          Boolean    @default(false)
  reminders          Reminder[]
  activeSubscription String?
}

model Message {
  id         String   @id @default(uuid())
  reminder   Reminder @relation(fields: [reminderId], references: [id])
  reminderId String   @unique
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @default(now()) @db.Timestamptz(6) // "2022-01-11T07:20:49.271Z"
}
